<?xml version="1.0" encoding="utf-8"?>
<ProjectSchemaDefinitions xmlns="clr-namespace:Microsoft.Build.Framework.XamlTypes;assembly=Microsoft.Build.Framework" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib" xmlns:transformCallback="Microsoft.Cpp.Dev10.ConvertPropertyCallback">
  <Rule
    Name="asc"
    PageTemplate="tool"
    DisplayName="altona shader compiler"
    Order="200">
    <Rule.DataSource>
      <DataSource
        Persistence="ProjectFile"
        ItemType="asc" />
    </Rule.DataSource>
    <Rule.Categories>
      <Category
        Name="General">
        <Category.DisplayName>
          <sys:String>General</sys:String>
        </Category.DisplayName>
      </Category>
      <Category
        Name="Command Line"
        Subtype="CommandLine">
        <Category.DisplayName>
          <sys:String>Command Line</sys:String>
        </Category.DisplayName>
      </Category>
    </Rule.Categories>
    <StringListProperty
      Name="Inputs"
      Category="Command Line"
      IsRequired="true"
      Switch=" ">
      <StringListProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType="asc"
          SourceType="Item" />
      </StringListProperty.DataSource>
    </StringListProperty>
    <BoolProperty
      Name="Quiet"
      HelpContext="0"
      DisplayName="Quiet operation"
      Description="suppresses printing of logo"
      Switch="-q" />
    <BoolProperty
      Name="Debug"
      HelpContext="0"
      DisplayName="Include debug output"
      Description="includes shader debug output in bytecode"
      Switch="-d" />
    <BoolProperty
      Name="NoOpt"
      HelpContext="0"
      DisplayName="Turn off optimizations"
      Description="turns off shader optimizations (please only use in case of emergency)"
      Switch="-n" />
    <BoolProperty
      Name="NoAuto"
      HelpContext="0"
      DisplayName="Turn off auto shader constant generation"
      Description="Disables automatic generation of C++ representations of shader constants"
      Switch="-noauto" />
    <BoolProperty
      Name="OldEngine"
      HelpContext="0"
      DisplayName="Create code for old engine"
      Description="Will only generate shaders for DirectX as C++-array"
      Switch="--oldengine" />
    <BoolProperty
      Name="OldD3DCompiler"
      HelpContext="0"
      DisplayName="Use old d3d compiler"
      Description="Use old d3d compiler"
      Switch="--d3dold" />
    <BoolProperty
      Name="OldEngineXBox"
      HelpContext="0"
      DisplayName="Generate xbox360 material for old engine"
      Description="Generate xbox360 material for old engine"
      Switch="--oldengxbox" />
    <BoolProperty
      Name="GenCg"
      HelpContext="0"
      DisplayName="GenCg"
      Description="Generate OGL Cg shaders"
      Switch="--gen_cg" />
    <StringProperty
      Name="CommandLineTemplate"
      DisplayName="Command Line"
      Visible="False"
      IncludeInCommandLine="False" />
    <DynamicEnumProperty
      Name="ascBeforeTargets"
      Category="General"
      EnumProvider="Targets"
      IncludeInCommandLine="False">
      <DynamicEnumProperty.DisplayName>
        <sys:String>Execute Before</sys:String>
      </DynamicEnumProperty.DisplayName>
      <DynamicEnumProperty.Description>
        <sys:String>Specifies the targets for the build customization to run before.</sys:String>
      </DynamicEnumProperty.Description>
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^ascBeforeTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
      <DynamicEnumProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          HasConfigurationCondition="true" />
      </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>
    <DynamicEnumProperty
      Name="ascAfterTargets"
      Category="General"
      EnumProvider="Targets"
      IncludeInCommandLine="False">
      <DynamicEnumProperty.DisplayName>
        <sys:String>Execute After</sys:String>
      </DynamicEnumProperty.DisplayName>
      <DynamicEnumProperty.Description>
        <sys:String>Specifies the targets for the build customization to run after.</sys:String>
      </DynamicEnumProperty.Description>
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^ascAfterTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
      <DynamicEnumProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType=""
          HasConfigurationCondition="true" />
      </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>
    <StringListProperty
      Name="Outputs"
      DisplayName="Outputs"
      Visible="False"
      IncludeInCommandLine="False" />
    <StringProperty
      Name="ExecutionDescription"
      DisplayName="Execution Description"
      Visible="False"
      IncludeInCommandLine="False" />
    <StringListProperty
      Name="AdditionalDependencies"
      DisplayName="Additional Dependencies"
      IncludeInCommandLine="False"
      Visible="false" />
    <StringProperty
      Subtype="AdditionalOptions"
      Name="AdditionalOptions"
      Category="Command Line">
      <StringProperty.DisplayName>
        <sys:String>Additional Options</sys:String>
      </StringProperty.DisplayName>
      <StringProperty.Description>
        <sys:String>Additional Options</sys:String>
      </StringProperty.Description>
    </StringProperty>
  </Rule>
  <ItemType
    Name="asc"
    DisplayName="altona shader compiler" />
  <FileExtension
    Name="*.asc"
    ContentType="asc" />
  <ContentType
    Name="asc"
    DisplayName="altona shader compiler"
    ItemType="asc" />
